<% if flash.now[:success] %>
  <%= turbo_stream.replace 'page_content' do %>
    <%= render partial: 'products/index', locals: { products: @products } %>
  <% end %>
<% elsif flash.now[:error] %>
  <%= turbo_stream.replace 'page_content' do %>
    <%= render partial: 'products/form', locals: { product: @product } %>
  <% end %>
<% end %>

<%= turbo_stream.replace 'flash_messages' do %>
  <%= render partial: 'application/flash' %>
<% end %>